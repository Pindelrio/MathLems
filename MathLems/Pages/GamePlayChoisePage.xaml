<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MathLems.Pages.GamePlayChoisePage"
             Title="Tria les operacions">
    <StackLayout Margin="20" Spacing="30">

        <Frame BackgroundColor="{StaticResource Primary}" CornerRadius="20" >
            <Label Text="+ -" HorizontalTextAlignment="Center" FontSize="26"></Label>
        </Frame>
        <Frame BackgroundColor="{StaticResource Primary}" CornerRadius="20" >
            <Label Text="+ - x" HorizontalTextAlignment="Center" FontSize="26"></Label>
        </Frame>
        <Frame BackgroundColor="{StaticResource Primary}" CornerRadius="20" >
            <Label Text="+ - x %" HorizontalTextAlignment="Center" FontSize="26"></Label>
        </Frame>

        <Button Text="Continuar" Clicked="OnContinueClicked" VerticalOptions="EndAndExpand"></Button>
    </StackLayout>
</ContentPage>